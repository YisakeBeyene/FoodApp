<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/injera_background"


    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/yetsom"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:onClick="openYetsom"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/yetsom"
                        android:padding="15dp"
                        android:src="@drawable/ic_diet"
                        android:layout_gravity="center_horizontal"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="yetsom"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yetsom"
                        android:layout_margin="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="check out our Yestom megboch recipes"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/yefisik"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:onClick="openYefisik"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/yefisik"
                        android:padding="15dp"
                        android:src="@drawable/ic_cow"
                        android:layout_gravity="center_horizontal"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yefisik"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yefisik"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="check out our Yefisik megboch recipes"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

       
    </LinearLayout>





</LinearLayout>