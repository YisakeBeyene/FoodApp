<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>
    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@drawable/mylodo101</item>
        <item name="android:windowAnimationStyle">@style/custom_animation</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splashTheme1" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@drawable/splash1</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/custom_animation</item>
    </style>
    <style name="yetsom" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">

        <item name="colorPrimary">@color/yetsom</item>
        <item name="colorPrimaryDark">@color/yetsom</item>
        <item name="colorAccent">@color/yetsom</item>
    </style>

</resources>
